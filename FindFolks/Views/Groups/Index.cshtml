@model FindFolks.Models.GroupIndexModel

@{
    ViewBag.Title = "Groups";
}

<h2>Groups</h2>

<div class="row" style="margin-bottom: 1em;">
    <div class="col-md-12" style="text-align: center;">
        <a class="btn btn-default btn-lg" href="@Url.Action("CreateGroup", "Groups")">Don't see a group you want to join? Add one!</a>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="list-group">
            @foreach (var g in Model.Groups)
            {
                <a href="@Url.Action("Info", "Groups", new { id = g.GroupId })" class="list-group-item">
                    <h3 class="list-group-item-heading">@g.GroupName <span class="pull-right"><i class="fa fa-angle-right fa-fw"></i></span></h3>
                    <p class="list-group-item-text">@g.GroupDescription</p>
                    <p class="list-group-item-text">Created by @g.GroupCreator</p>
                </a>
            }
        </div>
    </div>
</div>
